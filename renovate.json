{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "dependencyDashboard": true,
  "enabledManagers": ["github-actions", "custom.regex"],
  "customManagers": [
    {
      "customType": "regex",
      "managerFilePatterns": ["/^Dockerfile$/", "/^config.yaml$/"],
      "matchStrings": [
        "FROM ghcr.io/linuxserver/webtop:debian-xfce-(?<currentValue>.+)\\n",
        "version: (?<currentValue>.+)\\n"
      ],
      "datasourceTemplate": "docker",
      "packageNameTemplate": "ghcr.io/linuxserver/webtop",
      "depNameTemplate": "Webtop",
      "extractVersionTemplate": "^debian-xfce-(?<version>.+)$",
      "versioningTemplate": "regex:^([0-9a-f]+)?-ls(?<minor>[0-9]+)(-[0-9]+)?$"
    }
  ],
  "packageRules": [
    {
      "description": "Automerge non-major updates",
      "matchUpdateTypes": ["minor", "patch"],
      "automerge": true
    },
    {
      "matchPackageNames": ["ghcr.io/linuxserver/webtop"],
      "minimumGroupSize": 2
    }
  ]
}
