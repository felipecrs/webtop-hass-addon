{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:recommended"],
  "dependencyDashboard": true,
  "enabledManagers": ["regex"],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": ["^Dockerfile$", "^config.yaml$"],
      "matchStrings": [
        "FROM ghcr.io/linuxserver/webtop:debian-xfce-(?<currentValue>.+)\\n",
        "version: (?<currentValue>.+)\\n"
      ],
      "datasourceTemplate": "docker",
      "packageNameTemplate": "ghcr.io/linuxserver/webtop",
      "depNameTemplate": "Webtop",
      "versioningTemplate": "loose"
    }
  ],
  "packageRules": [
    {
      "matchPackageNames": ["ghcr.io/linuxserver/webtop"],
      "followTag": "debian-xfce"
    }
  ]
}
